<% if @foods.any? %>
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <h2 class="text-title"><span class="text-bb">Search Results (<%= @foods.count %>)</span></h2>
        <br><br><br>
      </div>
    </div>
    <div class="row">
      <% @foods.each do |food| %>
          <div class="col-md-4 col-sm-6 col-xs-6 col-sb">
            <div class="figure">
              <div class="image-medium-wrapper">
                <%= image_tag(food.primary_image_url(:medium), class: "img-responsive") %>
              </div>
              <div class="figcaption">
                <h3 class="truncate text-strong mobile-sb"><%= food.name %></h3>
                <% if food.restaurant.offers_delivery? %>
                    <div class="row">
                      <div class="col-md-6">
                        <h4 class="remove-margin truncate">By <%= link_to food.restaurant.name, restaurant_path(food.restaurant) %></h4>
                      </div>
                      <div class="col-md-6 text-right deliverable-col">
                        <h4 class="remove-margin text-muted"><%= fa_icon "motorcycle" %> Deliverable</h4>
                      </div>
                    </div>
                <% else %>
                    <h4 class="remove-margin truncate">By <%= link_to food.restaurant.name, restaurant_path(food.restaurant) %></h4>
                <% end %>
                <div class="figcaption-footer">
                  <div class="row">
                    <div class="col-md-5 col-sm-5 col-xs-5">
                      <%= simple_form_for CartItem.new do |f| %>
                          <%= f.input :food_id, as: :hidden, input_html: {value: food.id} %>
                          <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
                              <i class="glyphicon glyphicon-shopping-cart"></i> Order
                          <% end %>
                      <% end %>
                    </div>
                    <div class="col-md-7 col-sm-7 col-xs-7">
                      <h4 class="text-right text-price mobile-price"><%= price_format(food.price) %></h4>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
      <% end %>
    </div>
<% else %>
    <h1 class="text-center">No results for "<%= params[:q] %>"</h1>
<% end %>