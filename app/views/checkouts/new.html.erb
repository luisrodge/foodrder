<div class="row">
  <div class="col-md-5">
    <h2 class="remove-margin">
      <span class="text-bb">Checkout Your <%= pluralize_normal("Order", @cart.cart_items) %></span></h2>
    <br><br><br>
    <div class="row">
      <div class="col-md-12">
        <%= simple_form_for [@cart, @order], url: cart_checkouts_path do |f| %>
            <%= f.input :phone_number, input_html: {class: 'input-lg'}, label_html: {class: 'lb-lg'} %>
            <% if @cart.delivery_selected? %>
                <%= f.input :location, input_html: {class: 'input-lg'}, label_html: {class: 'lb-lg'} %>
                <%= f.input :location_description, placeholder: "Details about your house (color, type, etc...)",
                            input_html: {class: 'input-lg'}, label_html: {class: 'lb-lg'} %>
            <% end %>
            <br>
            <%= f.submit "Send Order", class: "btn btn-primary btn-lg btn-block" %>
        <% end %>
      </div>

    </div>
  </div>

  <div class="col-md-6 pull-right">
    <div class="row">
      <div class="col-md-12 text-right">
        <h2>Total: <span class="text-price"><%= price_format(@cart.total) %></span></h2>
      </div>
    </div>
    <br>
    <% @cart_fragments.each do |cart_fragment| %>
        <div class="col-box col-box-db col-sb">
          <div class="row">
            <div class="col-md-8">
              <h3><%= pluralize_normal("Order", cart_fragment.cart_items.count) %>
                From <%= cart_fragment.restaurant.name %></h3>
            </div>
            <div class="col-md-4 text-right">
              <% if cart_fragment.delivery? %>
                  <h3 class="text-muted">Delivery</h3>
              <% else %>
                  <h3 class="text-muted">Pick Up</h3>
              <% end %>
            </div>
          </div>

          <hr>
          <br>
          <% cart_fragment.cart_items.each do |cart_item| %>
              <div class="row text-center">
                <div class="col-md-3">
                  <div class="image-medium-wrapper">
                    <%= cart_item.cart_item_image %>
                  </div>
                </div>
                <div class="col-md-3">
                  <h4><%= cart_item.food_name %></h4>
                </div>
                <div class="col-md-3">
                  <h4>Quantity <br><%= cart_item.quantity %></h4>
                </div>
                <div class="col-md-3">
                  <h4 class="text-price"><%= price_format(cart_item.total) %></h4>
                </div>
              </div>
              <br>
          <% end %>
        </div>
    <% end %>
  </div>
</div>

