<header>
  <div class="top-header">
    <div class="container">
      <div class="row">
        <div class="col-md-2 col-sm-12">
          <div class="top-header-col-1">
            <%= link_to root_path, class: "header-logo" do %>
                foodrder <span class="header-slogan">search, order...eat</span>
            <% end %>
          </div>
        </div>
        <div class="col-md-5 col-sm-12">
          <div class="top-header-col-2">
            <div id="top-header-search-wrapper">
              <%= form_tag search_path, method: :get do %>
                  <div class="input-group stylish-input-group">
                    <%= text_field_tag :query, params[:query], class: "form-control input-lg",
                                       placeholder: "What do you want to eat?" %>
                    <span class="input-group-addon">
                      <button type="submit">
                        <span class="glyphicon glyphicon-search"></span>
                      </button>
                    </span>
                  </div>
              <% end %>
            </div>
          </div>

        </div>
        <div class="col-md-3 col-sm-12 top-header-col-3 pull-right text-right ">
          <%= link_to cart_path, class: "btn btn-info btn-lg title" do %>
              <i class="glyphicon glyphicon-shopping-cart"></i> My Cart (<%= @cart.cart_items.count %>)
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <nav class="navbar navbar-default application-navbar" role="navigation">
    <div class="container">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <i class="fa fa-bars" aria-hidden="true"></i> Menu
        </button>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><%= link_to "Foods", foods_path, class: "nav-fl" %></li>
          <li><%= link_to "Restaurants", restaurants_path %></li>
          <li><%= link_to "Why Use foodrder?", info_customers_path %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if current_supplier %>
              <li><%= link_to "Dashboard", supplier_dashboard_path %></li>
              <li><%= link_to "Sign Out", destroy_supplier_session_path, method: :delete %></li>
          <% elsif current_admin %>
              <li><%= link_to "Dashboard", admin_dashboard_path %></li>
              <li><%= link_to "Sign Out", destroy_admin_session_path, method: :delete %></li>
          <% else %>
              <li>
              <li><%= link_to "Sign In", new_supplier_session_path,
                              class: "nav-cart" %>
              </li>
          <% end %>
        </ul>
      </div><!-- /.navbar-collapse -->
      <%= link_to cart_path, class: "btn btn-default btn-lg navbar-btn cart-btn title" do %>
          <i class="glyphicon glyphicon-shopping-cart"></i> My Cart (<%= @cart.cart_items.count %>)
      <% end %>

    </div>
  </nav>
  </div>
</header>