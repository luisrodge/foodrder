<header>
  <nav class="navbar navbar-default" role="navigation">
    <div class="container">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "foodrder", root_path, class: "navbar-brand" %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><a href="#">Restaurants</a></li>
          <li><a href="#">Foods</a></li>
          <li><a href="#">Request Food</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if current_customer %>
              <li><%= link_to "Dashboard", customer_dashboard_path %></li>
              <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
              <li><a href="#" class="nav-cart">Cart (0)</a></li>
          <% elsif current_seller %>
              <li><%= link_to "Dashboard", seller_dashboard_path %></li>
              <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
          <% elsif current_admin %>
              <li><%= link_to "Dashboard", admin_dashboard_path %></li>
              <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
          <% else %>
              <li><%= link_to "Sign In", new_user_session_path %></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Register <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Customer Register", new_customer_registration_path %></li>
                  <li class="divider"></li>
                  <li><a href="#">Add Your Restaurant</a></li>
                </ul>
              </li>
              <li>
                <%= link_to cart_path do %>
                  <i class="glyphicon glyphicon-shopping-cart"></i> Cart (<%= @cart.cart_items.count %>)
                <% end %>
              </li>
          <% end %>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div>
  </nav>
</header>