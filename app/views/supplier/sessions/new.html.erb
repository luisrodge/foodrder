<% title "Supplier Sign In" %>

<div class="row">
  <div class="col-md-6 center-block">
    <h2>Supplier Sign In</h2>
    <br><br>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, input_html: { class: "input-lg" } %>
        <%= f.input :password, required: false, input_html: { class: "input-lg" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <br>
      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-primary btn-block btn-lg" %>
      </div>
    <% end %>
    <br>
    <%= render "supplier/shared/links" %>
  </div>
</div>
