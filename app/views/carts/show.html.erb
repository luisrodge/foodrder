<% if @cart.cart_items.any? %>
    <div class="row">
      <div class="col-md-6">
        <h2 class="remove-margin"><span class="text-bb">Orders In Your Cart
          (<%= @cart_items.count %>)</span></h2>
      </div>
      <div class="col-md-6 text-right">
        <h2 class="remove-margin">Total: <span class="text-price"><%= price_format(@cart.total) %></span></h2>
      </div>
    </div>

    <br><br>

    <div class="row">
      <div class="col-md-12">
        <div class="col-box col-box-db text-center">
          <h2 class="text-center text-sb">Ready To Send Your Orders?</h2>
          <h4 class="text-lh">Before checking out please ensure that you've specified whether or not you want delivery
            from the restaurants you are ordering
            from below. By default delivery is set to false and pickup is set to true for all orders.</h4><br>
          <p><%= link_to "Proceed To Checkout", new_cart_checkout_path(@cart), class: "btn btn-primary btn-lg" %></p>
          <br>
        </div>
      </div>
    </div>

    <br><br>

    <% @cart_fragments.each do |cart_fragment| %>
        <div class="row">
          <div class="col-md-6">
            <h2><%= pluralize_normal("Order", cart_fragment.cart_items.count) %>
              From <%= cart_fragment.restaurant.name %></h2>
          </div>
          <div class="col-md-6 text-right">
            <label for="delivery">Delivery?</label>
            <%= check_box_tag :delivery, 1, cart_fragment.delivery,
                              onchange: "cart.toggleDelivery(this, event)",
                              data: {"cf-id" => "#{cart_fragment.id}"} %>
          </div>
        </div>
        <% cart_fragment.cart_items.each do |cart_item| %>
            <div class="col-box ">
              <div class="row gutter-70">
                <div class="col-md-3">
                  <%= cart_item.cart_item_image %>
                </div>
                <div class="col-md-3">
                  <h3 class="text-title remove-margin text-sb"><%= cart_item.food_name %></h3>
                  <h4 class="remove-margin">Price: <span class="text-price "><%= price_format(cart_item.food_price) %></h4>
                  <hr>
                  <h4>Orders: <%= cart_item.quantity %></h4>
                  <h4 class="remove-margin">Sub Total: <span class="text-price "><%= price_format(cart_item.total) %></span></h4>
                </div>
                <div class="col-md-3">
                  <%= simple_form_for cart_item, method: :put do |f| %>
                      <%= f.input :quantity, label_html: {class: 'lb-lg'} %>
                      <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
                          <i class="glyphicon glyphicon-refresh"></i> Update
                      <% end %>
                  <% end %>
                </div>
                <div class="col-md-3 text-right">
                  <br/>
                  <%= link_to cart_item_path(cart_item), method: :delete, class: "btn btn-danger" do %>
                      <i class="glyphicon glyphicon-remove"></i> Remove
                  <% end %>
                </div>
              </div>
            </div><br>
        <% end %>
    <% end %>
<% else %>
    <div class="row">
      <div class="col-md-12 text-center">
        <h1><i class="glyphicon glyphicon-shopping-cart"></i> (0)</h1>
        <h2 class="remove-margin">No Orders In Cart :(</h2>
        <br><br><br>
        <%= link_to "Foods", "", class: "btn btn-primary btn-lg" %>
        <%= link_to "Restaurants", "", class: "btn btn-primary btn-lg" %>
      </div>
    </div>
<% end %>