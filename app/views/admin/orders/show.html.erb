<div class="row">
  <div class="col-md-6">
    <%= @order.process_title %>
  </div>
  <div class="col-md-6 text-right">
    <h2 class="text-price">Total: <%= price_format(@order.total) %></h2>
  </div>
</div>

<hr>


<br><br>
<div class="row ">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-4 text-center">
        <div class="col-box col-box-bg">
          <h3 class="remove-margin"><i class="fa fa-motorcycle" aria-hidden="true"></i> Delivery Address</h3>
          <hr>
          <h4 class="text-sb"><%= @order.location %></h4>
          <h4 class="text-sb"><%= @order.location_description %>
          </h4>
        </div>
      </div>
      <div class="col-md-4 text-center">
        <div class="col-box col-box-bg">
          <h3 class="remove-margin"><i class="fa fa-phone"></i> Customer Contact Number</h3>
          <hr>
          <h4 class="text-sb"><%= @order.phone_number %></h4>
        </div>
      </div>
      <div class="col-md-4 text-center">
        <div class="col-box col-box-bg">
          <h3 class="remove-margin"><i class="fa fa-user-circle"></i> Customer Name</h3>
          <hr>
          <h4 class="text-sb">Luis Rodriguez</h4>
        </div>
      </div>
    </div>
    <br><br>
  </div>
  <div class="col-md-12">
    <% @order_fragments.each do |order_fragment| %>
        <div class="order-frag-wrapper">
          <div class="row">
            <div class="col-md-8">
              <div class="row">
                <div class="col-md-6">
                  <h2 class="text-title remove-margin">Order For <%= order_fragment.restaurant.name %>
                  </h2>
                </div>
                <div class="col-md-6 text-right">
                  <h2 class="text-price remove-margin">Total: <%= price_format(order_fragment.total) %></h2>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <table class="table table-bordered">
                    <thead>
                    <tr>
                      <th>Food</th>
                      <th>Quantity</th>
                      <th>Price</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% order_fragment.order_items.each do |order_item| %>
                        <tr>
                          <td>
                            <div class="row">
                              <div class="col-md-3">
                                <div class="image-medium-wrapper">
                                  <%= image_tag(order_item.food.primary_image_url(:medium)) %>
                                </div>
                              </div>
                            </div>
                            <%= order_item.food.name %>
                          </td>
                          <td><%= order_item.quantity %></td>
                          <td class="text-price"><%= price_format(order_item.total) %></td>
                        </tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
            <div class="col-md-4 text-center">
              <div class="col-box col-box-db">
                <h3>Restaurant Contact #: <%= order_fragment.restaurant.phone_number %></h3>
                <% if order_fragment.delivery? %>
                    <h3 class="remove-margin"><i class="fa fa-motorcycle" aria-hidden="true"></i> Delivery</h3>
                <% else %>
                    <h3 class="remove-margin">Pick Up</h3>
                <% end %>
                <br>
                <div class="col-box col-box-bg">
                  <%= order_fragment.status_instructions %>
                </div>
                <br><br>
                <%= order_fragment.update_status_btn %>
              </div>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
