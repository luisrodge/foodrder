  <div class="col-md-12">
    <table class="table table-bordered">
      <thead>
      <tr>
        <th>Name</th>
        <th>Primary Image</th>
        <th>Origin Employee Email</th>
        <th>Location</th>
        <th>Phone</th>
        <th>Manage</th>
      </tr>
      </thead>
      <tbody>
      <%= render @restaurants %>
      </tbody>
    </table>
  </div>
</div>