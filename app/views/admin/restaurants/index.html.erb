<div class="row">
  <div class="col-md-6">
    <h2 class="remove-margin">Restaurants (<%= @restaurants.count %>)</h2>
  </div>
  <div class="col-md-6 text-right">
    <%= link_to "Add New Restaurant", new_admin_restaurant_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>

<hr>
<br><br><br>

<div class="row">
  <div class="col-md-12">
    <table class="table table-bordered">
      <thead>
      <tr>
        <th>Name</th>
        <th>Primary Image</th>
        <th>Origin Employee Email</th>
        <th>Location</th>
        <th>Phone</th>
        <th>Manage</th>
      </tr>
      </thead>
      <tbody>
        <% @restaurants.each do |restaurant| %>
            <tr>
              <td><%= link_to restaurant.name, admin_restaurant_path(restaurant), class: 'primary-link' %></td>
              <td>
                <div class="image-thumb">
                  <%= image_tag(restaurant.primary_image_url(:thumb)) %>
                </div>
              </td>
              <td>test@yahoo.com</td>
              <td><%= restaurant.location %></td>
              <td><%= restaurant.phone_number %></td>
              <td><%= link_to "Edit", edit_admin_restaurant_path(restaurant), class: "btn btn-default" %></td>
            </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>