<div class="row">
  <div class="col-md-6 center-block text-center">
    <h1><span class="text-bb"><%= @restaurant.name %> Specials</span></h1><br>
    <%= link_to admin_restaurant_path(@restaurant), class: "btn btn-primary" do %>
        <i class="fa fa-arrow-left" aria-hidden="true"></i> Return
    <% end %>

  </div>
</div>

<br><br><br><br>

<div class="row grid">
  <!-- add sizing element for columnWidth -->
  <div class="grid-sizer col-md-4"></div>
  <% @specials.each do |special| %>
      <div class="grid-item col-md-4 col-sm-12 col-xs-12 col-sb">
        <div class="grid-item-content col-box col-box-db">
          <div class="row">
            <div class="col-md-6">
              <h3 class="remove-margin"><span class="text-bb"><%= special.name %></span></h3><br>
            </div>
            <div class="col-md-6 text-right">
              <%= link_to "Edit Sepcial", "#", class: "btn btn-primary btn-sm" %>
              <%= link_to "Remove Special", "#", class: "btn btn-danger btn-sm" %>
            </div>
          </div>
          <% if special.tags.any? %>
              <hr>
              <div class="row">
                <div class="col-md-12">
                  Tags: <%= special.tag_names %>
                </div>
              </div>
          <% end %>

          <hr>
          <br>
          <div class="row">
            <div class="col-md-5 col-sm-4 col-xs-4">
              <div class="image-medium-wrapper">
                <%= image_tag(special.primary_image_url(:medium), class: "img-responsive") %>
              </div>
            </div>
            <div class="col-md-7 col-sm-6 col-xs-6">
              <h4 class="text-price"><%= price_format(special.price) %></h4>
              <hr>
              <h4><%= format_datetime(special.selling_date) %></h4>
              <hr>
              <h4><%= special.description %></h4>
            </div>
          </div>
          <br>
        </div>
      </div>
  <% end %>
</div>

<script type="text/javascript" charset="utf-8">
    $('.grid').isotope({
        itemSelector: '.grid-item', // use a separate class for itemSelector, other than .col-
        percentPosition: true,
        masonry: {
            columnWidth: '.grid-sizer'
        }
    });
</script>