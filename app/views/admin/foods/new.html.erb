<div class="row">
  <div class="col-md-5 center-block">
    <h2>Add A New Food To <%= @menu.name %> Menu</h2><br/><br>

    <%= simple_form_for [:admin, @menu, @food], html: { multipart: true } do |f| %>
        <%= f.input :name, input_html: { class: "input-lg" } %>
        <%= f.input :price, input_html: { class: "input-lg" } %>
        <%= f.input :description %>
        <%= f.input :estimated_cook_time %>
        <%= f.input :primary_image, as: :file  %><br/>
        <%= f.button :submit, class: "btn btn-success btn-lg btn-block" %>
    <% end %>
  </div>
</div>
