<div class="nested-fields">
  <%= f.input :name, input_html: {class: "input-lg"}, label_html: {class: 'lb-lg'} %>
  <%= f.input :price, input_html: {class: "input-lg"}, label_html: {class: 'lb-lg'} %>
  <%= f.input :restaurant_id, as: :hidden, input_html: {value: @menu.restaurant.id} %>
  <%= link_to_remove_association f, class: "btn btn-danger btn-lg" do %>
      <i class="fa fa-times" aria-hidden="true"> Remove</i>
  <% end %>
</div>
