<div class="nested-fields">
  <div class="form-group">
    <h4>Open At:</h4>
    <%= f.time_select :open, {ampm: true, include_blank: true}, class: 'form-control input-lg' %>
  </div>
  <br>
  <div class="form-group">
    <h4>Close At:</h4>
    <%= f.time_select :close, {ampm: true, include_blank: true}, class: 'form-control input-lg' %>
  </div>
  <%= f.hidden_field :schedule_id, input_html: {value: @schedule.id} %>
  <%= link_to_remove_association "Remove", f, class: "btn btn-danger btn-lg" %>
</div>
