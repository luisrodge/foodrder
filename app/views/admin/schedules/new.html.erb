<div class="row">
  <div class="col-md-6 center-block">
    <h2><span class="text-bb">Add New Schedule To <%= @restaurant.name %></span></h2>

    <br><br><br>
    <%= form_for [:admin, @restaurant, @schedule] do |f| %>
        <div class="form-group">
          <h4>Setup Schedule</h4>
          <%= f.select_recurring :recurring %>
        </div>
        <br>
        <div class="form-group">
          <h4>Open At:</h4>
          <%= f.text_field :open, class: 'form-control input-lg timepicker' %>
        </div>
        <div class="form-group">
          <h4>Close At:</h4>
          <%= f.text_field :close, class: 'form-control input-lg timepicker' %>
        </div>
        <br>
        <%= f.submit "Create Schedule", class: "btn btn-primary btn-lg btn-block" %>
    <% end %>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
    $(function () {
        $('.timepicker').pickatime();
    });
</script>