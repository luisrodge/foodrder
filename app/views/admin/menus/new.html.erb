<div class="row">
  <div class="col-md-5 center-block">
    <h2><span class="text-bb">New Menu To <%= @restaurant.name %></span></h2><br><br><br>
    <%= simple_form_for [:admin, @restaurant, @menu] do |f| %>
        <%= f.input :name, input_html: {class: "input-lg"} %>
        <br>
        <%= f.label :taggable_tokens, "Optional Menu Tags" %>
        <br>
        <%= f.text_field :taggable_tokens %>
        <br>
        <br>
        <%= f.button :submit, class: "btn btn-success btn-lg btn-block" %>
    <% end %>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
    $(function () {
        $("#menu_taggable_tokens").tokenInput('/admin/tags.json',
            {theme: 'bootstrap'});
    });
</script>