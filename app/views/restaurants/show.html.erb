<div class="row">
  <div class="col-md-6 col-sm-6 col-xs-6">
    <%= image_tag(@restaurant.primary_image, class: "img-responsive") if @restaurant.primary_image? %>
  </div>
  <div class="col-md-5 col-sm-5 col-xs-6 pull-right">
    <div class="restaurant-name-address">
      <h2 class="text-title"><span class="text-bb"><%= @restaurant.name %></span></h2>
      <h3><%= @restaurant.address %></h3>
    </div>
    <div class="restaurant-information">
      <div class="restaurant-other-information">
        <h3>Monday - Saturday</h3>
        <h3>9:00AM - 10:00PM</h3>
        <hr>
        <h3>Offers Delivery</h3>
      </div>
    </div>
  </div>
</div>

<br><br><br><br>

<div class="row">
  <div class="col-md-6 col-sm-6 col-xs-6">
    <h2 class="remove-margin">Restaurant Menus (<%= @restaurant.menus.count %>)</h2>
  </div>
  <div class="col-md-6 col-sm-6 col-xs-6 text-right">
    <h3 class="remove-margin text-muted"><%= @restaurant.menu_food_counter %></h3>
  </div>
</div>
<br><br>
<div class="row grid">
  <!-- add sizing element for columnWidth -->
  <div class="grid-sizer col-md-6"></div>

  <% @restaurant.menus.each do |menu| %>
      <div class="grid-item col-md-6 col-sm-12 col-xs-12 col-sb">
        <div class="grid-item-content col-box">
          <h3><span class="text-bb"><%= menu.name %></span></h3><br>
          <% menu.foods.each do |food| %>
              <div class="row">
                <div class="col-md-4 col-sm-4 col-xs-4">
                  <%= image_tag(food.primary_image.medium, class: "img-responsive") if food.primary_image? %>
                </div>
                <div class="col-md-4 col-sm-4 col-xs-4">
                  <h4><%= food.name %></h4>
                  <h4 class="text-price"><%= price_format(food.price) %></h4>
                </div>
                <div class="col-md-4 col-sm-4 col-xs-4 text-right">
                  <%= simple_form_for CartItem.new do |f| %>
                      <%= f.input :food_id, as: :hidden, input_html: {value: food.id} %>
                      <%= button_tag(type: 'submit', class: "btn btn-success btn-sm") do %>
                          <i class="glyphicon glyphicon-shopping-cart"></i> Order
                      <% end %>
                  <% end %>
                </div>
              </div>
              <br>
          <% end %>
        </div>
      </div>
  <% end %>
</div>

<script type="text/javascript" charset="utf-8">
    $('.grid').isotope({
        itemSelector: '.grid-item', // use a separate class for itemSelector, other than .col-
        percentPosition: true,
        masonry: {
            columnWidth: '.grid-sizer'
        }
    });
</script>