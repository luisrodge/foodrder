<div class="row">
  <div class="col-md-12">
    <h2 class="text-title"><span class="text-bb">Restaurants In Santa Elena & San Ignacio</span></h2><br><br><br>
  </div>
</div>
<div class="row">
  <% @restaurants.each do |restaurant| %>
      <div class="col-md-4 col-sm-4 col-xs-6 col-sb">
        <%= link_to restaurant_path(restaurant) do %>
            <div class="figure">
              <div class="image-medium-wrapper">
                <%= image_tag(restaurant.primary_image_url(:medium), class: "img-responsive") %>
              </div>
              <div class="figcaption">
                <h3 class="truncate"><%= restaurant.name %></h3>
                <h4><%= restaurant.location %></h4>
                <div class="figcaption-footer text-muted">
                  <div class="row">
                    <div class="col-md-6 col-sm-6 col-xs-12">
                      <h4 class="mobile-sb"><%= pluralize(restaurant.menus.count, "Menu") %></h4>
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-12 text-right col-mobile-pl">
                      <h4 class="truncate"><%= pluralize(restaurant.foods.count, "Total Food") %></h4>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        <% end %>
      </div>
  <% end %>
</div>
