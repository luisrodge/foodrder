<div class="row">
  <div class="col-md-12">
    <ul class="categories">
      <% Tag.limit(20).each do |tag| %>
          <li><%= link_to tag.name, foods_path(mc: tag.name) %></li>
      <% end %>
    </ul>
  </div>
</div>

<br><br>

<div class="row">
  <div class="col-md-12">
    <h2 class="text-title"><span class="text-bb">Latest Foods</span></h2><br>
  </div>
  <div class="col-md-12">
    <div class="row row-grid">
      <% Food.order("created_at DESC").limit(6).each do |food| %>
          <div class="col-md-4 col-sm-6 col-xs-6 col-sb">
            <div class="figure">
              <div class="image-medium-wrapper">
                <%= image_tag(food.primary_image_url(:medium), class: "img-responsive") %>
              </div>
              <div class="figcaption">
                <h3 class="truncate text-strong mobile-sb"><%= food.name %></h3>
                <% if food.restaurant.offers_delivery? %>
                    <div class="row">
                      <div class="col-md-6">
                        <h4 class="remove-margin truncate">By <%= link_to food.restaurant.name, restaurant_path(food.restaurant) %></h4>
                      </div>
                      <div class="col-md-6 text-right deliverable-col">
                        <h4 class="remove-margin text-muted truncate"><%= fa_icon "motorcycle" %> Deliverable</h4>
                      </div>
                    </div>
                <% else %>
                    <div class="row">
                      <div class="col-md-6">
                        <h4 class="remove-margin truncate">By <%= link_to food.restaurant.name, restaurant_path(food.restaurant) %></h4>
                      </div>
                      <div class="col-md-6 text-right deliverable-col">
                        <h4 class="remove-margin text-muted truncate">Pickup</h4>
                      </div>
                    </div>
                <% end %>
                <div class="figcaption-footer">
                  <div class="row">
                    <div class="col-md-5 col-sm-5 col-xs-5">
                      <%= simple_form_for CartItem.new do |f| %>
                          <%= f.input :food_id, as: :hidden, input_html: {value: food.id} %>
                          <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
                              <i class="glyphicon glyphicon-shopping-cart"></i> Order
                          <% end %>
                      <% end %>
                    </div>
                    <div class="col-md-7 col-sm-7 col-xs-7">
                      <h4 class="text-right text-price mobile-price"><%= price_format(food.price) %></h4>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
<br>

<div class="row">
  <div class="col-md-12">
    <h2 class="text-title"><span class="text-bb">Latest Restaurants</span></h2><br>
  </div>
  <div class="col-md-12">
    <div class="row">
      <% Restaurant.order("created_at DESC").limit(6).each do |restaurant| %>
          <div class="col-md-4 col-sm-6 col-xs-6 col-sb">
            <%= link_to restaurant_path(restaurant) do %>
                <div class="figure">
                  <div class="image-medium-wrapper">
                    <%= image_tag(restaurant.primary_image_url(:medium), class: "img-responsive") %>
                  </div>
                  <div class="figcaption">
                    <h3 class="truncate text-strong"><%= restaurant.name %></h3>
                    <h4><%= restaurant.location %></h4>
                    <div class="figcaption-footer text-muted">
                      <div class="row">
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          <h4 class="mobile-sb"><%= pluralize(restaurant.menus.count, "Menu") %></h4>
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12 text-right col-mobile-pl">
                          <h4 class="truncate"><%= pluralize(restaurant.foods.count, "Total Food") %></h4>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
            <% end %>
          </div>
      <% end %>
    </div>
  </div>
</div>

<div class="subscribe-wrapper home-subscribe">
  <h2 class="text-center remove-margin text-title"><span class="text-bb">Become a foodrder subscriber!</span></h2><br><br>
  <h4 class="text-center text-lh mobile-h">
    Subscribe to our website if you would like to be notified, via text message, about any special offers being offered
    by foodrder listed restaurants. <span class="text-strong">By subscribing you are agreeing that foodrder will be able to send text
    messages to your phone number.</span>
  </h4>
  <br>
  <div class="row">
    <div class="col-md-6 center-block">
      <%= simple_form_for Subscriber.new do |f| %>
        <%= f.input :mobile_number, label: false, input_html: {class: 'input-lg'} %>
          <%= f.button :submit, "Subscribe", class: "btn btn-primary btn-lg btn-block" %>
      <% end %>
    </div>
  </div>
</div>