<div class="row">
  <div class="col-md-12">
    <ul class="categories">
      <% Tag.limit(20).each do |tag| %>
          <li><%= link_to tag.name, foods_path(mc: tag.name) %></li>
      <% end %>
    </ul>
  </div>
</div>

<br><br>

<div class="row">
  <div class="col-md-12">
    <h2 class="text-title"><span class="text-bb">Latest Foods</span></h2><br>
  </div>
  <div class="col-md-12">
    <div class="row row-grid">
      <% Food.order("created_at DESC").limit(6).each do |food| %>
          <div class="col-md-4 col-sm-6 col-xs-12 col-sb">
            <div class="figure">
              <div class="image-medium-wrapper">
                <%= image_tag(food.primary_image_url(:medium), class: "img-responsive") %>
                <% unless food.restaurant.currently_open? %>
                    <div class="close-caption md">
                      <h4 class="remove-margin">Restaurant Closed</h4>
                    </div>
                <% end %>
              </div>
              <div class="figcaption">
                <h3 class="truncate text-strong"><%= food.name %></h3>
                <% if food.restaurant.offers_delivery? %>
                    <div class="row">
                      <div class="col-md-6 col-sm-6 col-xs-6">
                        <h4 class="remove-margin truncate">By <%= link_to food.restaurant.name, restaurant_path(food.restaurant) %></h4>
                      </div>
                      <div class="col-md-6 col-sm-6 col-xs-6 text-right">
                        <h4 class="remove-margin text-muted truncate"><%= fa_icon "motorcycle" %> Deliverable</h4>
                      </div>
                    </div>
                <% else %>
                    <div class="row">
                      <div class="col-md-6 col-sm-6 col-xs-6">
                        <h4 class="remove-margin truncate">By <%= link_to food.restaurant.name, restaurant_path(food.restaurant) %></h4>
                      </div>
                      <div class="col-md-6 col-sm-6 col-xs-6 text-right">
                        <h4 class="remove-margin text-muted truncate">Pickup</h4>
                      </div>
                    </div>
                <% end %>
                <div class="figcaption-footer">
                  <div class="row">
                    <div class="col-md-5 col-sm-5 col-xs-5">
                      <% if food.customizable? %>
                          <%= link_to food_path(food), class: "btn btn-primary" do %>
                              <i class="glyphicon glyphicon-shopping-cart"></i> Order
                          <% end %>
                      <% else %>
                          <%= simple_form_for [food, CartItem.new] do |f| %>
                              <%= f.input :itemable_id, as: :hidden, input_html: {value: food.id} %>
                              <%= button_tag(type: 'submit', class: "btn btn-primary",
                                             data: {disable_with: "Adding To Cart..."}) do %>
                                  <i class="glyphicon glyphicon-shopping-cart"></i> Order
                              <% end %>
                          <% end %>
                      <% end %>
                    </div>
                    <div class="col-md-7 col-sm-7 col-xs-7">
                      <% if food.variants.any? %>
                          <h4 class="text-right text-price">Variants</h4>
                      <% else %>
                          <h4 class="text-right text-price"><%= price_format(food.price) %></h4>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
<br>

<div class="row">
  <div class="col-md-12">
    <h2 class="text-title"><span class="text-bb">Latest Restaurants</span></h2><br>
  </div>
  <div class="col-md-12">
    <div class="row">
      <% Restaurant.order("created_at DESC").limit(3).each do |restaurant| %>
          <div class="col-md-4 col-sm-6 col-xs-12 col-sb">
            <%= link_to restaurant_path(restaurant) do %>
                <div class="figure">
                  <div class="image-medium-wrapper">
                    <%= image_tag(restaurant.primary_image_url(:medium), class: "img-responsive") %>
                    <% unless restaurant.currently_open? %>
                        <div class="close-caption">
                          <h4 class="remove-margin">Closed Now</h4>
                        </div>
                    <% end %>
                  </div>
                  <div class="figcaption">
                    <h3 class="truncate text-strong"><%= restaurant.name %></h3>
                    <h4><%= restaurant.location %></h4>
                    <div class="figcaption-footer text-muted">
                      <div class="row">
                        <div class="col-md-6 col-sm-6 col-xs-6">
                          <h4 class="mobile-sb"><%= pluralize(restaurant.menus.count, "Menu") %></h4>
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-6 text-right">
                          <h4 class="truncate"><%= pluralize(restaurant.foods.count, "Total Food") %></h4>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
            <% end %>
          </div>
      <% end %>
    </div>
  </div>
</div>

