<div class="home-search-form">
  <div class="form-wrapper">
    <div class="row">
      <div class="col-md-10 center-block">
        <h2 class="text-center text-uppercase search-form-text">Search, Order...Eat :)</h2>
        <div id="custom-search-input">
          <div class="input-group col-md-12">
            <input type="text" class="form-control input-lg" placeholder="Search for food in San Ignacio & Santa Elena"/>
            <span class="input-group-btn">
          <button class="btn btn-success btn-lg" type="button">
            <i class="glyphicon glyphicon-search"></i>
          </button>
        </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<br>

<div class="row">
  <div class="col-md-12">
    <h2 class="text-title">Popular</h2><br>
  </div>
  <div class="col-md-12">
    <div class="row row-grid">
      <% Food.limit(8).each do |food| %>
          <div class="col-md-3 col-sb">
            <div class="figure">
              <%= image_tag(food.primary_image.medium, class: "img-responsive") if food.primary_image? %>
              <div class="figcaption">
                <h3 class="truncate"><%= food.name %></h3>
                <h4>By <%= link_to food.restaurant.name, restaurant_path(food.restaurant) %></h4>
                <div class="figcaption-footer">
                  <div class="row">
                    <div class="col-md-5">
                      <%= simple_form_for CartItem.new do |f| %>
                          <%= f.input :food_id, as: :hidden, input_html: {value: food.id} %>
                          <%= button_tag(type: 'submit', class: "btn btn-success btn-sm") do %>
                              <i class="glyphicon glyphicon-shopping-cart"></i> Order
                          <% end %>
                      <% end %>
                    </div>
                    <div class="col-md-7">
                      <h4 class="text-right text-price"><%= price_format(food.price) %></h4>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
<br>

<div class="row">
  <div class="col-md-12">
    <h2 class="text-title">Latest Restaurants</h2><br>
  </div>
  <div class="col-md-12">
    <div class="row">
      <% Restaurant.limit(3).each do |restaurant| %>
          <div class="col-md-4">
            <%= link_to restaurant_path(restaurant) do %>
                <div class="figure">
                  <%= image_tag(restaurant.primary_image.medium, class: "img-responsive") if restaurant.primary_image? %>
                  <div class="figcaption">
                    <h3><%= restaurant.name %></h3>
                    <h4><%= restaurant.location %></h4>
                    <div class="figcaption-footer text-muted">
                      <div class="row">
                        <div class="col-md-6">
                          <h4><%= pluralize(restaurant.menus.count, "Menu") %></h4>
                        </div>
                        <div class="col-md-6 text-right">
                          <h4><%= pluralize(restaurant.foods.count, "Total Food") %></h4>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
            <% end %>
          </div>
      <% end %>
    </div>
  </div>
</div>